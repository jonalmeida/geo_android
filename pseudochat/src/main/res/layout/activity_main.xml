<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.evilolive.pseudochat.MainActivity">

    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter Nick"
            android:id="@+id/textView_enterNick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Test"
            android:id="@+id/button_send"
            android:onClick="sendMessage"
            android:layout_gravity="right|bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Response"
            android:id="@+id/textView_response"
            android:layout_gravity="left|center_vertical" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/editText_nick"
            android:layout_gravity="right|top" />

        <EditText
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/editText_msg"
            android:layout_gravity="left|bottom" />

        <TextView
            android:layout_width="225dp"
            android:layout_height="142dp"
            android:id="@+id/textView_response_output"
            android:layout_gravity="right|center_vertical"
            android:inputType="text" />

    </FrameLayout>

    <!-- android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         If you're not building against API 17 or higher, use
         android:layout_gravity="left" instead. -->
    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->
    <fragment android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="io.evilolive.pseudochat.NavigationDrawerFragment" />

</android.support.v4.widget.DrawerLayout>
